<Window x:Class="EuropaUniversalisWorldEditor.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EuropaUniversalisWorldEditor"
        mc:Ignorable="d"
        Title="EU4 Unofficial World Editor" Height="720" Width="1280" FocusManager.FocusedElement="{Binding ElementName=Canvas}">
    
    <Canvas Name="Canvas" KeyDown="CanvasKeyDown" KeyUp="CanvasKeyUp" MouseWheel="CanvasMouseWheel" Focusable="True" >
        <Image Name="Background"
               Width="1000"
               Height="600"
               VerticalAlignment="Center"
               HorizontalAlignment="Center" />
    </Canvas>
        
</Window>
