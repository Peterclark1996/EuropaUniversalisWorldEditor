<Window x:Class="EuropaUniversalisWorldEditor.UI.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EuropaUniversalisWorldEditor"
        mc:Ignorable="d"
        Title="Setup" Height="450" Width="800">

    <Border Style="{StaticResource PropertyPanelBorder}">
        <StackPanel>
            <TextBlock Text="Game Path:" />
            <TextBox Name="GamePathText" />
            <Button Content="Open" Click="GamePathOpenClick" />

            <TextBlock Text="Mods Path:" />
            <TextBox Name="ModsPathText" />
            <Button Content="Open" Click="ModsPathOpenClick" />

            <Button Content="OK" Click="OkClick" />
        </StackPanel>
    </Border>

</Window>